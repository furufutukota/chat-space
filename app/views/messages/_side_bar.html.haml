.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path(current_user), class: "button" do
          = icon("fa", "edit") 
        = link_to edit_user_path(current_user), class: "button" do
          = icon("fa", "cog")
  .side-bar__groups
    .side-bar__groups__group
      .side-bar__groups__group__list
        - current_user.groups.each do |group|
          .group
            = link_to '#' do
              .group__name
                = group.name
